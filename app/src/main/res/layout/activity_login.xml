<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ic_key"
                android:layout_width="112dp"
                android:layout_height="94dp"
                android:src="@drawable/nasgor"
                android:layout_marginTop="60dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Email atau No.Telp"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input"
                android:ems="40"
                android:hint="email atau no.telp"
                android:paddingStart="14dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tvPw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Kata Sandi"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_semibold"/>

            <EditText
                android:id="@+id/editTextTextPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/custom_input"
                android:ems="10"
                android:hint="kata sandi"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"/>

            <!--            <TextView-->
            <!--                android:id="@+id/tv_lupapass"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="5dp"-->
            <!--                android:layout_marginRight="8dp"-->
            <!--                android:gravity="right"-->
            <!--                android:text="Lupa Sandi?"-->
            <!--                android:textColor="@color/primery"-->
            <!--                android:textSize="16sp" />-->

            <Button
                android:id="@+id/btnMasuk"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:background="@drawable/template_button"
                android:textColor="@color/white"
                android:text="Masuk"
                android:layout_gravity="center"/>

            <View
                android:id="@+id/garis"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="50dp"
                android:background="@color/garis" />

            <TextView
                android:id="@+id/teks1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_regular"
                android:gravity="center"
                android:text="Anda Belum memiliki akun?"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/daftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:gravity="center"
                android:text="DAFTAR SEKARANG"
                android:textColor="@color/status_proses"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>